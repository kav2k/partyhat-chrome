{
  "manifest_version": 2,
  "name": "Partyhatify",
  "description": "Suddenly, this webpage is wearing partyhats",
  "icons": {
    "48": "img/partyhat.png",
    "128": "img/partyhat.png"
  },
  
  "browser_action": {
    "default_icon": "img/partyhat.png",
    "default_title": "Suddenly, a partyhat!"
  },

  "background": {
    "scripts": ["js/event.js"],
    "persistent": false
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "web_accessible_resources": [
    "img/*",
    "css/*",
    "js/*.js"
  ],

  "version": "1.1"
}
